extends ../../layout_before_login

block header
  a.l-table-cell.m-header-menu(href="/login/") Log in
block content
  section.l-container--full
    form.m-login.l-table(method="post", action="/")
      div.m-login-inner.l-table-cell
        input.m-input(placeholder="Email", type="text", name="email")
        input.m-input(placeholder="Password", type="text", name="password")
        input(type="hidden", name="id")
        input.m-btn.m-btn--max(type="submit", value="Sign up")
