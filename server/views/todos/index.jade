extends ../layout

block content
  section
    h2= title
    ul.m-todos
      each todo, index in todos
        li.m-todos-item.l-table
          .m-todos-item__title.l-table-cell
            a(href="/todos/#{index}") #{index}:#{todo.title}
          .m-todos-item__menu.l-table-cell
              a.m-btn(href="/todos/#{index}/edit") edit
              form(method="post", action="/todos/#{index}?_method=delete")
                input.m-btn(type="submit", value="del")
                input(type="hidden", name="id", value="#{index}")
    a(href="/todos/new") Create Todo