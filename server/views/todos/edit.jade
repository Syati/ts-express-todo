extends ../layout

block content
    h2= title
    form(method="post", action="/todos/#{id}?_method=put")
      input(type="text", name="title", value=todo.title)
      input(type="text", name="body", value=todo.body)
      input(type="hidden", name="id", value=id)
      input.m-btn(type="submit", value="update")
    a(href="/todos/") Todos